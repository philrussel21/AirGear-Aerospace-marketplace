
<div class="w-full flex flex-col items-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "bg-white shadow-lg rounded px-8 pt-6 pb-8 my-2 max-w-xs"}) do |f| %>

<!--ICON GOES HERE-->
  <div class="flex items-center justify-center flex-shrink-0 text-primary mr-6 mb-1 hover:text-hovered">
    <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
    <span class="font-semibold text-xl tracking-tight"><%= link_to 'AirGear', root_path %></h5></span>
  </div>

  <div class="text-m font-bold text-center my-2">
    <p>Log in to your account</p>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Email Address" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2"  %>
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", placeholder: "******" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex justify-center">
      <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
      <%= f.label :remember_me, class: "md:w-2/3 block text-gray-500 font-bold"%>
    </div>
  <% end %>

  <div class="text-sm font-bold text-center underline mb-4">
    <%= render "devise/shared/links"%>
  </div>

  <div class="actions flex justify-center">
    <%= f.submit "Log in", class: "w-3/4 bg-primary hover:bg-hovered text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"  %>
  </div>

    <div class="my-4">
  <hr>
  </div>

   <div class="text-sm font-bold text-center">
    <p>Don't have an account?</p>
  </div>

  <div class="flex justify-center my-4">
    <button class="w-3/4 bg-primary hover:bg-hovered text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"><%= link_to 'Sign up', new_account_registration_path %></button>
  </div>

<% end %>
<p class="text-center text-gray-500 text-xs">
    &copy;2020 Phil Antiporda
  </p>
</div>