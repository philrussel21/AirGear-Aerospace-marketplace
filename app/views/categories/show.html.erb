<h1 class="text-4xl font-medium mb-4"><%=@category.name%> Listings</h1>


<%if @listings.empty?%>
  <h2 class="text-xl font-light mb-4">No Listings yet for "<%=@category.name%>" category</h2>
<%else%>
  <%= render 'listings/dashboard', {listings: @listings, pagy: @pagy} %>
<%end%>
<div class="flex justify-center">
<%= link_to 'See All Listings', listings_path, class: "inline-block mx-auto border border-white bg-primary hover:bg-hovered text-white font-bold py-2 px-4 rounded-full" %>
</div>