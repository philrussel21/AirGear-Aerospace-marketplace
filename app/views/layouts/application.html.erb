<!DOCTYPE html>
<html>
  <head>
    <title>AirGear</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    <!--bootstrap CDN-->
    <!--link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script -->
  </head>

  <body class="max-h-screen overflow-scroll bg-gray-200">
  <header>
    <%= render 'pages/nav' %>
  </header>
  <main class="container w-4/5 mx-auto pt-20 pb-8">
    <!--from devise, can be customised -->
    <%if notice %><div class="notice bg-green-200 text-green-900 shadow-lg rounded px-8 pt-6 pb-8 text-center mx-auto max-w-xs"><%= notice %></div><%end%>
    <%if alert %><div class="alert bg-red-200 text-red-900 shadow-lg rounded px-8 pt-6 pb-8 text-center mx-auto max-w-xs"><%= alert %></div><%end%>

    <%= yield %>
  </main>
  </body>
  <%= javascript_pack_tag 'script'%>
</html>
