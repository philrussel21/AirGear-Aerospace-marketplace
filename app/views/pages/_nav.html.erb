<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to 'AirGear', root_path %></h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <form class="form-inline my-2 mt-md-0" action="/search">
      <%=select_tag(:search_by, options_for_select([["Part Number", 'part_num'],["Part Name", 'part_name']]))%>
      <input class="form-control mr-sm-2" type="text" name="q" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <%= link_to 'All Listings', listings_path, class: "btn btn-primary text-light"%>

    <%# Categories Nav %>
    <%@nav_categories.each do |category|%>
      <%= link_to category.name, category_path(category.name), class: 'btn btn-info text-light' %>
    <%end%>

    <%if account_signed_in? %>
      <%= link_to 'My Account', profile_path(current_account), class: "btn btn-outline-success" %>
      <%= link_to 'Log Out', destroy_account_session_path, method: :delete, class: "btn btn-outline-danger" %>
    <%else%>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-outline-warning"%>
    <%= link_to 'Sign Up', new_account_registration_path, class: "btn btn-outline-primary" %>
    <%= link_to 'Log in', new_account_session_path, class: "btn btn-outline-primary" %>
    <%end%>
  </nav>

</div>